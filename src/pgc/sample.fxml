<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.CheckBox?>
<FlowPane fx:controller="pgc.Controller"
          xmlns:fx="http://javafx.com/fxml" >

    <padding><Insets left="10" bottom="10" top="10" right="10"/> </padding>

    <Label text="Main Sequence Star Pressure Gradient Calculator">
        <font>
            <Font name="Helvetica Neue Bold" size="20" />
        </font>
    </Label>

    <GridPane alignment="CENTER_RIGHT" hgap="10" vgap="10">
        <padding><Insets left="10" bottom="10" top="10" right="10"/> </padding>

        <Label text="Limit (Sun=45): " alignment="CENTER_RIGHT"
           GridPane.columnIndex="0" GridPane.rowIndex="0" />

        <Label text="Star Radius: " alignment="CENTER_RIGHT"
               GridPane.columnIndex="0" GridPane.rowIndex="1" />

        <Label text="Density (Default=45)" alignment="CENTER_RIGHT"
               GridPane.columnIndex="0" GridPane.rowIndex="2"/>

        <Label text="Number of Steps (Default=45,000,000): " alignment="CENTER_RIGHT"
               GridPane.columnIndex="0" GridPane.rowIndex="3" />

        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="limitField"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="radiusField"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="densityField"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="stepsField" />

        <CheckBox text="Use * (10^x) for scientific notation" fx:id="prettyExponentBox"
                  GridPane.columnIndex="0" GridPane.rowIndex="4" />

        <Button text="Calculate" GridPane.columnIndex="1" GridPane.rowIndex="4" onAction="#goAction" />


    </GridPane>


</FlowPane>
